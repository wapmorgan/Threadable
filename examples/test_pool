#!/usr/bin/env php
<?php
use wapmorgan\Threadable\Worker;
use wapmorgan\Threadable\WorkersPool;
require_once __DIR__.'/../vendor/autoload.php';

$pool = new WorkersPool('wapmorgan\Threadable\Worker');
$pool->setPoolSize(4);

echo 'Running workers: ', $pool->countRunningWorkers().PHP_EOL;
echo 'Idle workers: ', $pool->countIdleWorkers().PHP_EOL;

$pool->sendData([123]);
$pool->sendData([456]);
$pool->sendData([789]);

$i = 0;
while (($i++) < 5) {
    echo 'Running workers: ', $pool->countRunningWorkers().PHP_EOL;
    echo 'Idle workers: ', $pool->countIdleWorkers().PHP_EOL;
    foreach ($pool->getWorkers() as $worker) {
        echo ': Worker '.$worker->getPid().' in state '.$worker->state.PHP_EOL;
    }
    usleep(500000);
}

$pool->setPoolSize(0);
$pool->sendData([null]);

$i = 0;
while (($i++) < 5) {
    echo 'Running workers: ', $pool->countRunningWorkers().PHP_EOL;
    echo 'Idle workers: ', $pool->countIdleWorkers().PHP_EOL;
    foreach ($pool->getWorkers() as $worker) {
        echo ': Worker '.$worker->getPid().' in state '.$worker->state.PHP_EOL;
    }
    usleep(500000);
}
